@model RostrosFelices.Pages.Empleados.CreateModel

@{
    ViewData["Title"] = "EMPLEADOS";
}

<h1>GESTION DE EMPLEADOS</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
